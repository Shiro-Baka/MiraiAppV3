<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_bubble_match_selection_phone"
    android:gravity="center"
    android:orientation="vertical"
    android:theme="@android:style/Theme.Black.NoTitleBar"
    tools:context=".BubbleMatchSelectionPage">


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/bubbleGuidelineLeft4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.07" />

        <ImageButton
            android:id="@+id/button_bubble_match_returnbtn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:background="@drawable/button_return_menu"
            android:contentDescription="bubblebackbutton"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@+id/bubbleGuidelineTop"
            app:layout_constraintDimensionRatio="1:0.4"
            app:layout_constraintStart_toStartOf="@+id/bubbleGuidelineLeft4"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/button_bubble_match_selection_romaji"
            android:background="@drawable/button_selection_romaji"
            android:contentDescription="button_bubble_match_selection_romaji"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="1:0.4"
            app:layout_constraintBottom_toTopOf="@+id/button_bubble_match_selection_kana"
            app:layout_constraintEnd_toStartOf="@+id/bubbleGuidelineRight"
            app:layout_constraintStart_toStartOf="@+id/bubbleGuidelineLeft"
            app:layout_constraintTop_toTopOf="@+id/bubbleGuidelineTop2"/>

        <ImageButton
            android:id="@+id/button_bubble_match_selection_kana"
            android:background="@drawable/button_selection_kana"
            android:contentDescription="bubbleromajibutton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="1:0.4"
            app:layout_constraintBottom_toTopOf="@+id/bubbleGuidelineBottom"
            app:layout_constraintEnd_toStartOf="@+id/bubbleGuidelineRight"
            app:layout_constraintStart_toStartOf="@+id/bubbleGuidelineLeft"
            app:layout_constraintTop_toBottomOf="@+id/button_bubble_match_selection_romaji" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/bubbleGuidelineTop1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.12" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/bubbleGuidelineTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.08" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/bubbleGuidelineTop2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.67" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/bubbleGuidelineLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.24" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/bubbleGuidelineRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.76" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/bubbleGuidelineBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.93" />

</androidx.constraintlayout.widget.ConstraintLayout>